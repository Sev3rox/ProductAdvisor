@page
@model webapp.Pages.ForumAdministratora.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "../Shared/_LayoutWorker.cshtml";
}

<style>
    body {
        background-image: url(http://www.barwonfoods.com/wp-content/uploads/2014/04/ESP-69.jpg);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<div style="        width: auto;
        background: rgb(255, 255, 255); /* Fallback for older browsers without RGBA-support */
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        border: solid;
        border-width: 1px;
        padding: 10px;
">

    <h1>Edit</h1>

    <h4>Forum</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Forum.ID" />
                <div class="form-group">
                    <label asp-for="Forum.name" class="control-label"></label>
                    <input asp-for="Forum.name" class="form-control" />
                    <span asp-validation-for="Forum.name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Forum.tresc" class="control-label"></label>
                    <input asp-for="Forum.tresc" class="form-control" />
                    <span asp-validation-for="Forum.tresc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Forum.data" class="control-label"></label>
                    <input asp-for="Forum.data" class="form-control" />
                    <span asp-validation-for="Forum.data" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Forum.userr" class="control-label"></label>
                    <input asp-for="Forum.userr" class="form-control" />
                    <span asp-validation-for="Forum.userr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>