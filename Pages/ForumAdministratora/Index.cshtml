                        </form>
                    </td>
                </tr>
            }
            @for (int i = 0; i < Model.Forum.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Forum[i].name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Forum[i].tresc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Forum[i].data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Forum[i].userr)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@Model.Forum[i].ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@Model.Forum[i].ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@Model.Forum[i].ID">Delete</a> |
                        <a asp-page="../Prawa/Details" asp-route-id="0" asp-route-userr="@Model.Forum[i].userr" asp-route-xpom="post">Profil użytkownika</a>
                        <form method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="z" value="@Model.Forum[i].ID" />
                            <input type="submit" name="submitButton" value="Wyroznij" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>