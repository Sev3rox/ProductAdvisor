@page
@model webapp.Pages.ForumAdministratora.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "../Shared/_LayoutWorker.cshtml";
}

<style>
    body {
        background-image: url(http://www.barwonfoods.com/wp-content/uploads/2014/04/ESP-69.jpg);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<div style="        width: auto;
        background: rgb(255, 255, 255); /* Fallback for older browsers without RGBA-support */
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        border: solid;
        border-width: 1px;
        padding: 10px;
">

    <h1>Index</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Forum[0].name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Forum[0].tresc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Forum[0].data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Forum[0].userr)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ForumTitled.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.ForumTitled[i].name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.ForumTitled[i].tresc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.ForumTitled[i].data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.ForumTitled[i].userr)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@Model.ForumTitled[i].ID">Edit</a> |
