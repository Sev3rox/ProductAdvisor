@model webapp.Pages.Prawa.DetailsModel
@{ViewData["Title"] = "Obsługa rezerwacji";
    Layout = "../Shared/_LayoutWorker.cshtml";
}

<style>
    body {
        background-image: url(http://www.barwonfoods.com/wp-content/uploads/2014/04/ESP-69.jpg);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<div style="        width: auto;
        background: rgb(255, 255, 255); /* Fallback for older browsers without RGBA-support */
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        border: solid;
        border-width: 1px;
        padding: 10px;
">

    <h1>Details</h1>

    <div>
        <h4>Account</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Username)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.role)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.role)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.role2)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.role2)
            </dd>
        </dl>
    </div>

    <table>
        @foreach (var item in Model.cats)
        {
<tr>
    <td>
        <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" width="40" height="40" />
    </td>


    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
</tr>}
    </table>
    <br />
    <br />
    <br />
    <table>
        <tr>
            <td>
                <div>

                    <form method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            <select asp-for="Account.Id" asp-items="ViewBag.WorkID"></select>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submitButton" value="Dodaj odznaczenie" input />
