                    </form>
                </div>
            </td>
            <td>
                <div>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <select asp-for="Account.Id" asp-items="ViewBag.WorkID2"></select>
                        </div>

                        <div class="form-group">
                            <input type="submit" name="submitButton" value="Usuń odznaczenie" input />
                        </div>
                    </form>
                </div>
            </td>
        </tr>
    </table>







    @if (Model.lastpage == "rec")
    {
<div>
    <a asp-page="../Products/Details"asp-route-id="@Model.pidd">Back to List</a>
</div> }
    else { if (Model.lastpage == "post")
        {
<div>
    <a asp-page="../ForumAdministratora/Index">Back to List</a>
</div>
        }
        else { if(Model.lastpage == "kom")
            {
<div>
    <a asp-page="../ForumAdministratora/Details" asp-route-id="@Model.pidd">Back to List</a>
