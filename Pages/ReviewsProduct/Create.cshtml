@page
@model webapp.Pages.ReviewsProduct.CreateModel

@{
    ViewData["Title"] = "Obsługa rezerwacji";
    Layout = "../Shared/_LayoutUser.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/style.css" />
</head>

<style>
    body {
        background-image: url(http://www.barwonfoods.com/wp-content/uploads/2014/04/ESP-69.jpg);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<div style="        width: auto;
        background: rgb(255, 255, 255); /* Fallback for older browsers without RGBA-support */
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        border: solid;
        border-width: 1px;
        padding: 10px;
">

    <h1>Create</h1>

    <h4>ReviewProduct</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReviewProduct.komentarz" class="control-label"></label>
                    <input asp-for="ReviewProduct.komentarz" class="form-control" />
                    <span asp-validation-for="ReviewProduct.komentarz" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReviewProduct.Number" class="control-label"></label>
                    <br />
                    <fieldset class="rating">
                        <input type="radio" id="star5" asp-for="ReviewProduct.Number" value="5" /><label for="star5"></label>
                        <input type="radio" id="star4" asp-for="ReviewProduct.Number" value="4" /><label for="star4"></label>
                        <input type="radio" id="star3" asp-for="ReviewProduct.Number" value="3" /><label for="star3"></label>
                        <input type="radio" id="star2" asp-for="ReviewProduct.Number" value="2" /><label for="star2"></label>
                        <input type="radio" id="star1" asp-for="ReviewProduct.Number" value="1" /><label for="star1"></label>
                    </fieldset>
                    <span asp-validation-for="ReviewProduct.Number" class="text-danger"></span>
                </div>
                <br />
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="/Products/DetailsUser" asp-route-id="@Model.product.Id">Back to Product</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
