@page
@model webapp.Pages.ForumUzytkownika.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "../Shared/_LayoutUser.cshtml";
}

<style>
    body {
        background-image: url(http://www.barwonfoods.com/wp-content/uploads/2014/04/ESP-69.jpg);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<div style="        width: auto;
        background: rgb(255, 255, 255); /* Fallback for older browsers without RGBA-support */
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        border: solid;
        border-width: 1px;
        padding: 10px;
">

    <h1>Details</h1>

    <div>
        <h4>Forum</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Forum.name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Forum.name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Forum.tresc)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Forum.tresc)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Forum.data)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Forum.data)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Forum.userr)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Forum.userr)
            </dd>
        </dl>
    </div>
    <div class="container">
        <h4>Komentarze (@Model.Forum.Comments.Count)</h4>
        <div class="row">
            @foreach (var item in Model.Forum.Comments)
            {
                <div class="col-md-8">
                    <div class="media g-mb-30 media-comment">
                        <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                            <div class="g-mb-15">
                                <h5 class="h5 g-color-gray-dark-v1 mb-0">
                                    @Html.DisplayFor(modelItem => item.Account1.Username)
                                </h5>
                                <span class="g-color-gray-dark-v4 g-font-size-12">@item.data</span>
                            </div>
                            <p>
                                @item.komentarz
                            </p>
                            
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div>
        @if (Model.accountt.role2 != 2)
        {
            <a asp-page="/CommentsUzytkownika/Create" asp-route-id="@Model.Forum.ID">Dodaj komentarz</a> 
        }
       | <a asp-page="./Index">Back to List</a>
    </div>
</div>
<style>



.g-height-50 {
    height: 50px;
}

.g-width-50 {
    width: 50px !important;
}

    #div1 {
        display: inline-block;
    }

    #div2 {
        display: inline-block;
    }
.g-bg-secondary {
    background-color: #fafafa !important;
}

.u-shadow-v18 {
    box-shadow: 0 5px 10px -6px rgba(0, 0, 0, 0.15);
}

.g-color-gray-dark-v4 {
    color: #777 !important;
}

.g-font-size-12 {
    font-size: 0.85714rem !important;
}

.media-comment {
    margin-top:20px
}
</style>