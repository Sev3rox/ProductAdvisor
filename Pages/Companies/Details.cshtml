@page
@model webapp.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "../Shared/_LayoutWorker.cshtml";
}

<style>
    body {
        background-image: url(http://www.barwonfoods.com/wp-content/uploads/2014/04/ESP-69.jpg);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<div style="        width: auto;
        background: rgb(255, 255, 255); /* Fallback for older browsers without RGBA-support */
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        border: solid;
        border-width: 1px;
        padding: 10px;
">

    <h1>Details</h1>

    <div>
        <h4>Company</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Company.Image)
            </dt>
            <dd class="col-sm-10">
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.Company.Image)" width="500" />
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Company.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Company.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Company.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Company.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Company.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Company.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Company.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Company.Location)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Company.ID">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</div>