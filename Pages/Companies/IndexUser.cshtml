@page
@model webapp.Pages.Companies.IndexUserModel

@{ ViewData["Title"] = "Obsługa rezerwacji";
                Layout = "../Shared/_LayoutUser.cshtml"; }
<style>
    body {
        background-image: url(http://www.barwonfoods.com/wp-content/uploads/2014/04/ESP-69.jpg);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<div style="        width: auto;
        background: rgb(255, 255, 255); /* Fallback for older browsers without RGBA-support */
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        border: solid;
        border-width: 1px;
        padding: 10px;
">
    <h1>Index</h1>
    <br />
    <a asp-page="../CompaniesUser/Index">Ignorowane</a>
    <br />
    <form method="get">
        <div class="col">
            <div class="input-group-append">
                <input class="form-control" asp-for="SearchTerm" />
                <button type="submit" class="btn btn-primary">Szukaj</button>
            </div>
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.catsss[0].Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.catsss[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.catsss[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.catsss[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.catsss[0].Location)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model.catsss)
            {
<tr>
    <td>
        <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" width="80" height="80" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Location)
    </td>
    <td>
        <a asp-page="./DetailsNotLoged" asp-route-id="@item.ID">Details</a> |
        <a asp-page="./Block" asp-route-id="@item.ID">Block</a>
    </td>
</tr>            }
        </tbody>
    </table>
</div>