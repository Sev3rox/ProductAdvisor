@page
@model webapp.Pages.ForumNotLoged.DetailsModel

@{
    ViewData["Title"] = "Obsługa rezerwacji";
    Layout = "../Shared/_LayoutNotLoged.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Forum</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Forum.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Forum.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Forum.tresc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Forum.tresc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Forum.data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Forum.data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Forum.userr)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Forum.userr)
        </dd>
    </dl>
</div>
<h4>Komentarze</h4>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.comment.komentarz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comment.data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comment.userr)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Forum.Comments)
        {
            @if (item.hidden == false)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.komentarz)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.userr)
                    </td>
                </tr>
            }

        }
    </tbody>
</table>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
