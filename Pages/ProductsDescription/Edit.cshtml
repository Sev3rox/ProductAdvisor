@page
@model webapp.Pages.ProductsDescription.EditModel

@{
    ViewData["Title"] = "Obsługa rezerwacji";
    Layout = "../Shared/_LayoutWorker.cshtml";
}

<h4>Edycja opisu produktu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductDescription.Id" />
            <div class="form-group">
                <label asp-for="ProductDescription.Description" class="control-label"></label>
                <input asp-for="ProductDescription.Description" class="form-control" />
                <span asp-validation-for="ProductDescription.Description" class="text-danger"></span>
            </div>
            <div style="display: none;" class="form-group">
                <label asp-for="ProductDescription.ProductId" class="control-label"></label>
                <select asp-for="ProductDescription.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="ProductDescription.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h2>Dane produktu do którego zostały zgłoszone poprawki opisu/nowy opis:</h2>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProductDescription.Product.Image)
    </dt>
    <dd class="col-sm-10">
        <img src="data:image;base64,@System.Convert.ToBase64String(Model.ProductDescription.Product.Image)" width="500" />
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProductDescription.Product.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ProductDescription.Product.Name)
    </dd>

    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProductDescription.Product.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ProductDescription.Product.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProductDescription.Product.Company)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ProductDescription.Product.Company.Name)
    </dd>
</dl>
<div>
    <a asp-page="./Index">Wróć do listy zgłoszonych opisów</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
