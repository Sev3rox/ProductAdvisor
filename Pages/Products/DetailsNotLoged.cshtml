@page
@model webapp.Pages.Products.DetailsNotLogedModel
@{ var cookieValue = Request.Cookies["MyCookie"];
    List<String> elem = null;
    bool has = false;
    if (cookieValue != null)
    {
        elem = cookieValue.Split(",").ToList();
        has = elem.Contains(Model.Product.Id.ToString());
    } }
@{ ViewData["Title"] = "Product";
                Layout = "../Shared/_LayoutNotLoged.cshtml"; }
<head>
    <link rel="stylesheet" type="text/css" href="~/style.css" />
</head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    body {
        background-image: url(http://www.barwonfoods.com/wp-content/uploads/2014/04/ESP-69.jpg);
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<div style="        width: auto;
        background: rgb(255, 255, 255); /* Fallback for older browsers without RGBA-support */
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        border: solid;
        border-width: 1px;
        padding: 10px;
">
@if (Model.xyz == "11")
    {
<div>
    <a asp-page="../Index">Back to List</a>
</div> }
    else
    {
<a asp-page="./IndexNotLoged">Back to List</a>
    }
<h1>Details</h1>

<div>
    <div class="row">
        <div class="col">
            <h4>Product</h4>
        </div>
        @if (has == false)
        {
            <div class="col">
                <form method="post" enctype="multipart/form-data">
                    <input type="submit" name="submitButton" value="Dodaj do porównania" input />
                </form>
            </div>}
        <div class="col">
            <a asp-area="" asp-page="/Products/CompareProductsNotLoged">Porównaj wybrane produkty</a>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="data:image;base64,@System.Convert.ToBase64String(Model.Product.Image)" width="500" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            <span class="fa fa-star checked"></span> Ocena
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.srednia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            <div class="row">
                <div class="col">
                    @Html.DisplayFor(model => model.Product.Description)
                </div>

            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Company.Name)
        </dd>



    </dl>

    <div class="container bootstrap snippets bootdey">
        <div class="row">
            <div class="col-md-12">
                <div class="blog-comment">
                    <h3 class="text-success">Recenzje ( @Model.Recenzje.Count)</h3>
                    <hr />
                    @foreach (var item in Model.Recenzje)
                    {
                        <ul class="comments">
                            <li class="clearfix">
                                <div class="post-comments">
                                    <p class="meta">
                                        @Html.DisplayFor(modelItem => item.data) <a href="#">@Html.DisplayFor(modelItem => item.userr)</a> give :
                                        @for (int i = 0; i < item.Number; i++)
                                        {<span class="fa fa-star checked"></span>}
                                        @for (int i = 0; i < 5 - item.Number; i++)
                                        {<span class="fa fa-star"></span>}</p>
                                    <p>
                                        @Html.DisplayFor(modelItem => item.komentarz)
                                    </p>
                                </div>
                                @if (item.CommentsReview.Count != 0)
                                {
                                    @for (int i = 0; i < item.CommentsReview.Count; i++)
                                    {
                                        Model.comrecenzje1 = item.CommentsReview.ToList();
                                        <ul class="comments">
                                            <li class="clearfix">
                                                <div class="post-comments">
                                                    <p class="meta">@Html.DisplayFor(modelItem => Model.comrecenzje1[i].data) <a href="#"> @Html.DisplayFor(modelItem => Model.comrecenzje1[i].userr)</a> </p>
                                                    <p>
                                                        @Html.DisplayFor(modelItem => Model.comrecenzje1[i].komentarz)
                                                    </p>
                                                </div>
                                            </li>
                                        </ul>
                                    }
                                }
                            </li>

                        </ul>
                    }

                </div>
            </div>
        </div>
    </div>

    @if (Model.xyz == "11")
    {
        <div>
            <a asp-page="../Index">Back to List</a>
        </div> }
    else
    {
        <a asp-page="./IndexNotLoged">Back to List</a>
    }

    <style>
        .checked {
            color: orange;
        }
        hr {
            margin-top: 20px;
            margin-bottom: 20px;
            border: 0;
            border-top: 1px solid #FFFFFF;
        }

        a {
            color: #82b440;
            text-decoration: none;
        }

        .blog-comment::before,
        .blog-comment::after,
        .blog-comment-form::before,
        .blog-comment-form::after {
            content: "";
            display: table;
            clear: both;
        }

        .blog-comment {
            padding-left: 15%;
            padding-right: 15%;
        }

            .blog-comment ul {
                list-style-type: none;
                padding: 0;
            }

            .blog-comment img {
                opacity: 1;
                filter: Alpha(opacity=100);
                -webkit-border-radius: 4px;
                -moz-border-radius: 4px;
                -o-border-radius: 4px;
                border-radius: 4px;
            }

                .blog-comment img.avatar {
                    position: relative;
                    float: left;
                    margin-left: 0;
                    margin-top: 0;
                    width: 65px;
                    height: 65px;
                }

            .blog-comment .post-comments {
                border: 1px solid #eee;
                margin-bottom: 20px;
                margin-left: 85px;
                margin-right: 0px;
                padding: 10px 20px;
                position: relative;
                -webkit-border-radius: 4px;
                -moz-border-radius: 4px;
                -o-border-radius: 4px;
                border-radius: 4px;
                background: #fff;
                color: #6b6e80;
                position: relative;
            }

            .blog-comment .meta {
                font-size: 13px;
                color: #aaaaaa;
                padding-bottom: 8px;
                margin-bottom: 10px !important;
                border-bottom: 1px solid #eee;
            }

            .blog-comment ul.comments ul {
                list-style-type: none;
                padding: 0;
                margin-left: 85px;
            }

        .blog-comment-form {
            padding-left: 15%;
            padding-right: 15%;
            padding-top: 40px;
        }

            .blog-comment h3,
            .blog-comment-form h3 {
                margin-bottom: 40px;
                font-size: 26px;
                line-height: 30px;
                font-weight: 800;
            }
    </style>
